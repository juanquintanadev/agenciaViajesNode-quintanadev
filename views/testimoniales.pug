extends ./layouts/index

block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        blockquote.text-center Lee sobre nuestros clientes
        include ./layouts/bloque_testimoniales
        .row
            h2.d-block.w-100.text-center Agrega un Testimonial 
            .col-md-12
                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center= error.mensaje


            .row.justify-content-center.col 
                .col-md-8
                    form(action="/testimoniales", method="POST")
                        .form-group     
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="Tu Nombre", name="nombre", class="form-control", value= nombre)
                        .form-group     
                            label(for="email") Correo Electr√≥nico 
                            input#email(type="email", placeholder="Tu Email", name="email", class="form-control", value= email)
                        .form-group     
                            label(for="mensaje") Mensaje
                            textarea#mensaje(name="mensaje", cols="", rows="3", class="form-control", placeholder="Tu mensaje")= mensaje
                        input(type="submit", name="", class="btn btn-success btn-block")
            